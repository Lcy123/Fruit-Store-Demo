<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KnowDetailActivity">
    <RelativeLayout
        android:id="@+id/know_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/know_detail_back"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="资讯详情"
            android:layout_toRightOf="@+id/know_detail_back"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <WebView
        android:id="@+id/know_detail_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/know_detail_ll"
        android:layout_below="@+id/know_detail_rl">

    </WebView>

    <LinearLayout
        android:id="@+id/know_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/know_detail_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:gravity="center"
            android:text="分享" />

        <TextView
            android:id="@+id/know_detail_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:gravity="center"
            android:text="收藏" />
    </LinearLayout>
</RelativeLayout>
